{
  "name": "Terra Incognita",
  "description": "Monitors and maps your Internet browsing",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "storage",
    "webNavigation",
    "history",
    "http://*/*", 
    "https://*/*",
    "webRequest",
    "webRequestBlocking"

  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_title": "Terra Incognita"
  },
  "chrome_url_overrides" : {
    "newtab": "terraincognita.html"
  },
  "web_accessible_resources": [
    "terraincognita.html"
    
  ],
  "manifest_version": 2
}
